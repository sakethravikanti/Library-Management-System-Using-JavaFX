<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="664.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.controller.AddMemberController">

    <children>

        <Label layoutX="109.0" layoutY="186.0" text="Name:">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
        <TextField fx:id="name" layoutX="349.0" layoutY="181.0" prefWidth="200" promptText="Enter Your Name" style="-fx-background-color: #edf6f9;" />

        <Label layoutX="109.0" layoutY="264.0" text="Email:">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
        <TextField fx:id="mailId" layoutX="349.0" layoutY="259.0" prefWidth="200" promptText="example@example.com" style="-fx-background-color: #edf6f9;" />

        <Label layoutX="108.0" layoutY="347.0" text="Mobile Number:">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
        <TextField fx:id="mobileNumber" layoutX="348.0" layoutY="342.0" prefWidth="200" promptText="Your Number Please" style="-fx-background-color: #edf6f9;" />

        <Label layoutX="109.0" layoutY="432.0" text="Gender:">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
        <ComboBox fx:id="genderComboBox" layoutX="349.0" layoutY="427.0" prefWidth="200" promptText="Select Your Gender" style="-fx-background-color: #edf6f9;" />

        <Label layoutX="108.0" layoutY="539.0" text="Address:">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
        <TextArea fx:id="addressArea" layoutX="349.0" layoutY="518.0" prefHeight="60" prefWidth="200" promptText="Enter Your Full Address" style="-fx-background-color: #edf6f9;" wrapText="true" />

        <Button fx:id="addButton" layoutX="134.0" layoutY="668.0" onAction="#handleAddMember" prefHeight="26.0" prefWidth="396.0" style="-fx-background-color: #4CAF50;" text="Add Member" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Label layoutX="220.0" layoutY="55.0" text="Add Member">
         <font>
            <Font name="System Bold" size="35.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
