<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="664.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.controller.UpdateMemberController">
   <children>

      <!-- Member ID for fetch -->
      <TextField fx:id="memberIdUpdate" layoutX="132.0" layoutY="121.0" prefHeight="26.0" prefWidth="200.0" promptText="Enter Member Mobile number to Fetch" style="-fx-background-color: #edf6f9;" />
      <Button fx:id="fetchButtonUpdate" layoutX="439.0" layoutY="121.0" mnemonicParsing="false" onAction="#handleFetchMember" style="-fx-background-color: ffba08;" text="Search" />

      <!-- Labels -->
      <Label layoutX="152.0" layoutY="194.0" text="Name">
         <font><Font name="System Bold" size="15.0" /></font>
      </Label>
      <Label layoutX="147.0" layoutY="267.0" text="Gender">
         <font><Font name="System Bold" size="15.0" /></font>
      </Label>
      <Label layoutX="147.0" layoutY="341.0" text="Mobile Number">
         <font><Font name="System Bold" size="15.0" /></font>
      </Label>
      <Label layoutX="147.0" layoutY="424.0" text="Mail ID">
         <font><Font name="System Bold" size="15.0" /></font>
      </Label>
      <Label layoutX="145.0" layoutY="528.0" text="Address">
         <font><Font name="System Bold" size="15.0" /></font>
      </Label>

      <!-- Input Fields -->
      <TextField fx:id="nameUpdate" layoutX="297.0" layoutY="192.0" prefWidth="220.0" style="-fx-background-color: #edf6f9;" />
      <ComboBox fx:id="genderUpdate" layoutX="297.0" layoutY="262.0" prefWidth="220.0" promptText="Select Your Gender" style="-fx-background-color: #edf6f9;" />
      <TextField fx:id="mobileNumberUpdate" layoutX="297.0" layoutY="336.0" prefWidth="220.0" style="-fx-background-color: #edf6f9;" />
      <TextField fx:id="mailIdUpdate" layoutX="297.0" layoutY="419.0" prefWidth="220.0" style="-fx-background-color: #edf6f9;" />
      <TextArea fx:id="addressUpdate" layoutX="297.0" layoutY="509.0" prefHeight="60.0" prefWidth="220.0" style="-fx-background-color: #edf6f9;" wrapText="true" />

      <!-- Action Buttons -->
      <Button fx:id="updateButtonUpdate" defaultButton="true" layoutX="368.0" layoutY="645.0" onAction="#handleUpdateMember" prefHeight="26.0" prefWidth="233.0" style="-fx-background-color: #4CAF50;" text="Update" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button fx:id="revertButtonUpdate" layoutX="64.0" layoutY="645.0" onAction="#handleRevert" prefHeight="26.0" prefWidth="233.0" style="-fx-background-color: e63946;" text="Reset" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>

   </children>
</AnchorPane>
