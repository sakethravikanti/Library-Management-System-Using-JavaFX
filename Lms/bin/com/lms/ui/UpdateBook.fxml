<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="664.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.controller.UpdateBookController">
    <fx:define>
        <ToggleGroup fx:id="statusGroup" />
        <ToggleGroup fx:id="availabilityGroup" />
    </fx:define>

    <children>
        <Label alignment="CENTER" layoutX="115.0" layoutY="28.0" prefWidth="434.0" text="Update Book Details">
            <font>
                <Font name="System Bold" size="35.0" />
            </font>
        </Label>
        <TextField fx:id="bookIdField" layoutX="122.0" layoutY="117.0" promptText="Enter Book ID" style="-fx-background-color: edf6f9;" />
        <Button layoutX="463.0" layoutY="117.0" onAction="#fetchBookDetails" style="-fx-background-color: ffba08;" text="Search" />

        <!-- Book Fields -->
        <Label layoutX="130.0" layoutY="197.0" text="Title:">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="titleField" layoutX="365.0" layoutY="197.0" prefWidth="233.0" promptText="Book Title" style="-fx-background-color: edf6f9;" />

        <Label layoutX="130.0" layoutY="272.0" text="Author:">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="authorField" layoutX="365.0" layoutY="272.0" prefWidth="233.0" promptText="Book Author" style="-fx-background-color: edf6f9;" />

        <Label layoutX="130.0" layoutY="348.0" text="Category:">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <ComboBox fx:id="categoryField" layoutX="365.0" layoutY="348.0" prefWidth="233.0" promptText="Select Category" style="-fx-background-color: edf6f9;" />

        <!-- Status Radio -->
        <Label layoutX="130.0" layoutY="435.0" text="Status:">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <RadioButton fx:id="statusActive" layoutX="371.0" layoutY="439.0" text="Active">
         <toggleGroup>
            <ToggleGroup fx:id="statusGroup" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="statusInactive" layoutX="461.0" layoutY="439.0" text="Inactive" toggleGroup="$statusGroup" />

        <!-- Availability Radio -->
        <Label layoutX="130.0" layoutY="529.0" text="Availability:">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <RadioButton fx:id="availableRadio" layoutX="370.0" layoutY="531.0" text="Available">
         <toggleGroup>
            <ToggleGroup fx:id="availabilityGroup" />
         </toggleGroup></RadioButton>
        <RadioButton fx:id="unavailableRadio" layoutX="480.0" layoutY="531.0" text="UnAvailable" toggleGroup="$availabilityGroup" />
        <Button defaultButton="true" layoutX="216.0" layoutY="660.0" onAction="#updateBookDetails" prefWidth="233.0" style="-fx-background-color: #4caf50;" text="Update" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
    </children>
</AnchorPane>
